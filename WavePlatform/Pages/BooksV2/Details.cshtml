@page
@model WavePlatform.Views.Books.DetailsModel

<h1>Book Details</h1>

<div>
    <h4>Title: @Model.Book.Title</h4>
    <h4>Author: @Model.Book.Author</h4>
    <p>@Model.Book.Description</p>
    @if (Model.Book.CoverImage != null)
    {
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Book.CoverImage)" />
    }
</div>

<div>
    <form asp-action="AddToLibrary" method="post">
        <input type="hidden" name="bookId" value="@Model.Book.BookId" />
        <button type="submit">Add to Library</button>
    </form>
</div>