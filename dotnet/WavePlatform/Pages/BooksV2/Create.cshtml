@page
@model WavePlatform.Pages.BooksV2.CreateModel

@{
    ViewData["Title"] = "Create New Book";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Book.Title"></label>
        <input asp-for="Book.Title" class="form-control" />
        <span asp-validation-for="Book.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Description"></label>
        <textarea asp-for="Book.Description" class="form-control"></textarea>
        <span asp-validation-for="Book.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.AuthorId"></label>
        <select asp-for="Book.AuthorId" asp-items="Model.AuthorList" class="form-control">
            <option value="">-- Select Author --</option>
        </select>
        <span asp-validation-for="Book.AuthorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>